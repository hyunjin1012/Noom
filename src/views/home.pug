doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Boom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body 
        header 
            h1 Boom
        main
            #welcome 
                form
                    input#roomName(type="text", placeholder="Room name?", required)
                    input#nickName(type="text", placeholder="Your nickname?", required)
                    button Enter Room 
            #call 
                    video#myFace(autoplay, playsinline, width="400", height="400") 
                    button#mute Mute 
                    button#camera Camera Off
                    select#cameras
                    video#peerFace(autoplay, playsinline,width="400", height="400")
            #room 
                h3
                ul 
                form
                    input(type="text", placeholder="Type in your message...", required)
                    button Send  
            #room_list 
                h4 Open Rooms: 
                ul  
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js") 